{
  "name": "stocktracker-websocket",
  "version": "1.0.0",
  "description": "WebSocket server for real-time stock data",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "check-env": "node check-test-env.js",
    "load-test": "node check-test-env.js && node load-test.js",
    "load-test:stress": "node check-test-env.js && NUM_CLIENTS=200 node load-test.js",
    "load-test:endurance": "node check-test-env.js && TEST_DURATION_MS=300000 node load-test.js",
    "load-test:quick": "node check-test-env.js && NUM_CLIENTS=50 TEST_DURATION_MS=30000 node load-test.js",
    "latency-test": "node check-test-env.js && node latency-test.js",
    "latency-test:ideal": "node check-test-env.js && TEST_CONDITIONS=ideal node latency-test.js",
    "latency-test:all": "node check-test-env.js && TEST_CONDITIONS=ideal,good,moderate,poor,bad node latency-test.js"
  },
  "dependencies": {
    "ws": "^8.16.0",
    "axios": "^1.6.5",
    "ioredis": "^5.3.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
